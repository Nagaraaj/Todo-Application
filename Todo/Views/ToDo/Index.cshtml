@model IEnumerable<Todo.Models.Todos>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <h1>Todo List...</h1>
    @{int count = 1;}
    <div class="panel" style="margin:25px">
        <div class="row">
            <p style="font-size:16px">Create new Task here &nbsp;
                @Html.ActionLink("New", "CreateNew")
            </p>
        </div>
        <div class="row">
            <h4 style="width:60%">Task List</h4>
            <br />
            <table class=" table table-striped table-bordered" style="width:600px">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Mark as Done", "MarkStatusDone", new { id = item.ID }, new { @class = "btn btn-default" }) &nbsp; | &nbsp;
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-default" }) &nbsp; | &nbsp;
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default" })
                        </td>
                    </tr>
                    {
                        count = count + 1;
                    }
                }

            </table>
        </div>

    </div>
   
    
</body>
</html>
